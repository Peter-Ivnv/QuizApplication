<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".QuizResults">

    <ImageView
        android:id="@+id/congratsImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/congrats" />

    <TextView
        android:id="@+id/successTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:layout_below="@+id/congratsImg"
        android:text="ВАШ РЕЗУЛЬТАТ:"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_below="@id/successTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/correctAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество правильных ответов: 0"
            android:textStyle="bold"
            android:textColor="#00C855"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/wrongAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Количество не правильных ответов: 0"
            android:textStyle="bold"
            android:textColor="#DD2C00"
            android:textSize="20dp"
            />

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/newGameBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="В главный экран"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:background="@drawable/round_back_green20"
        />
</RelativeLayout>